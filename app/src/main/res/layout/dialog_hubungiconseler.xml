<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/lay_dialog"
                android:background="@drawable/bg_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:padding="@dimen/dimen_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Hubungi Konseler"
                    android:id="@+id/tv_title"
                    android:layout_centerVertical="true"
                    style="@style/TextInTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
                android:padding="@dimen/dimen_8dp"
                style="@style/Text.SubHeaderTitle.Bold"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ada pertanyaan seputar aplikasi H.O.P.E, silahkan hubungi kami melali link dibawah ini"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_16dp">
            <android.support.v7.widget.CardView android:layout_width="0dp"
                                                android:layout_weight="1"
                                                app:cardElevation="0dp"
                                                android:layout_gravity="center_horizontal"
                                                app:cardBackgroundColor="@color/grey_100"
                                                app:cardCornerRadius="@dimen/dimen_24dp"
                                                android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:id="@+id/lay_callphone"
                              style="@style/clickable"
                              android:gravity="center_vertical"
                              android:background="@drawable/button_main"
                              android:padding="@dimen/dimen_16dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                               android:src="@drawable/ic_call_black_24dp"
                               android:tint="@color/white"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="@dimen/dimen_16dp"
                              style="@style/Text.SubHeaderTitle.Bold"
                              android:textColor="@color/white"
                              android:text="Telepon"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="0dp"
                                                app:cardElevation="0dp"
                                                android:layout_weight="1"
                                                android:layout_gravity="center_horizontal"
                                                app:cardCornerRadius="@dimen/dimen_24dp"
                                                android:layout_marginLeft="@dimen/dimen_12dp"
                                                android:layout_height="wrap_content">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:gravity="center_vertical"
                              android:id="@+id/lay_email"
                              style="@style/clickable"
                              android:background="@drawable/button_filled"
                              android:padding="@dimen/dimen_16dp">
                    <ImageView android:layout_width="@dimen/dimen_24dp" android:layout_height="@dimen/dimen_24dp"
                               android:src="@drawable/ic_email_black_24dp"
                               android:tint="@color/grey_700"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="@dimen/dimen_16dp"
                              style="@style/Text.SubHeaderTitle.Bold"
                              android:textColor="@color/grey_700"
                              android:text="Melalui email"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>