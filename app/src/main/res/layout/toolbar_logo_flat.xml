<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:stateListAnimator="@null"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <id.co.hope.utils.BaseToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:background="@drawable/bg_home_gradient"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:layout_height="match_parent">
            <ImageView android:layout_width="38dp" android:layout_height="38dp"
                       android:src="@drawable/ic_hope"
                       android:id="@+id/imageView2"></ImageView>
            <LinearLayout
                    android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView android:id="@+id/tv_title"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          style="@style/Text.SubSingleTitle.Bold"
                          android:layout_marginLeft="@dimen/dimen_12dp"
                          android:text="H.O.P.E"/>
                <TextView android:id="@+id/tv_subtitle"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          style="@style/Text.Standard.OneRow"
                          android:text="High of Pie Company" app:layout_constraintStart_toEndOf="@+id/imageView2"
                          android:layout_marginStart="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </id.co.hope.utils.BaseToolbar>

</android.support.design.widget.AppBarLayout>