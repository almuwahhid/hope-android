<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_8dp"
        android:orientation="horizontal"
        tools:context="id.co.hope.dialogs.DialogDetailAchievement.adapter.DialogDetailAchievementAdapter">
        <ImageView android:layout_width="@dimen/dimen_32dp" android:layout_height="@dimen/dimen_32dp"
                   android:layout_marginLeft="@dimen/dimen_8dp"
            android:src="@drawable/ic_comment_achievement"
                   android:tint="@color/colorPrimarySecond"
        />
        <android.support.v7.widget.CardView android:layout_width="match_parent"
                                            android:background="@color/white"
                                            app:cardCornerRadius="@dimen/dimen_4dp"
                                            android:layout_marginBottom="@dimen/dimen_2dp"
                                            app:cardElevation="@dimen/dimen_2dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dimen_16dp"
                                    app:contentPadding="@dimen/dimen_8dp">
            <TextView android:layout_width="match_parent"
                      android:id="@+id/tv_description"
                      android:text="@string/home_description"
                      style="@style/Text.Standard"
                      android:layout_height="wrap_content"/>
        </android.support.v7.widget.CardView>
</LinearLayout>
