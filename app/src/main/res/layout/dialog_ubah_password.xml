<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/bg_dialog"
                android:id="@+id/lay_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:padding="@dimen/dimen_16dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="@dimen/dimen_8dp"
                  android:layout_marginBottom="@dimen/dimen_8dp"
                  android:textColor="@color/colorPrimary"
                  android:layout_height="wrap_content"
                  style="@style/Text.SingleField.Regular"
                  android:text="Lengkapi isian dibawah ini!"/>
        <android.support.design.widget.TextInputLayout
                android:id="@+id/etPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_passwordlama"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                    android:hint="Masukkan password lama Anda"
                    style="@style/Edittext.Form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>
        <!--<EditText-->
                <!--android:id="@+id/edt_passwordlama"-->
                <!--android:layout_marginTop="@dimen/dimen_16dp"-->
                <!--android:drawableLeft="@drawable/ic_vpn_key_black_24dp"-->
                <!--android:hint="Masukkan password lama Anda"-->
                <!--style="@style/Edittext.Form"-->
                <!--android:inputType="text"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_passwordbaru"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:drawableStart="@drawable/ic_key"
                    android:hint="Masukkan password baru Anda"
                    style="@style/Edittext.Form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_passwordulangi"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:drawableStart="@drawable/ic_key"
                    android:hint="Ulangi password baru Anda"
                    style="@style/Edittext.Form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>
        <Button android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_main"
                android:layout_marginBottom="@dimen/dimen_24dp"
                android:layout_gravity="right"
                android:id="@+id/btn_ok"
                android:text="U B A H   P A S S WO R D"
                style="@style/Button"/>
    </LinearLayout>
</RelativeLayout>