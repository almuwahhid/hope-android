<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginLeft="@dimen/dimen_16dp"
                                    android:layout_marginRight="@dimen/dimen_16dp"
                                    android:layout_marginTop="@dimen/dimen_2dp"
                                    android:id="@+id/card_artikel"
                                    style="@style/clickable"
                                    android:layout_marginBottom="@dimen/dimen_2dp"
                                    android:layout_width="match_parent"
                                    app:cardCornerRadius="@dimen/dimen_4dp"
                                    app:contentPadding="@dimen/dimen_16dp"
                                    app:cardElevation="@dimen/dimen_2dp"
                                    app:cardBackgroundColor="@color/white"
                                    android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView android:layout_width="@dimen/dimen_64dp" android:layout_height="@dimen/dimen_64dp"
                   android:id="@+id/foto_artikel"
                   android:scaleType="centerCrop"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp">
            <ImageView android:layout_width="@dimen/dimen_12dp" android:layout_height="@dimen/dimen_12dp"
                       android:id="@+id/iccalendar"
                       android:src="@drawable/ic_calendar"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dimen_4dp"
                      android:layout_toRightOf="@+id/iccalendar"
                      style="@style/Text.Caption.Bold"
                      android:id="@+id/tv_date"
                      android:text="25 Januari 2019"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_below="@+id/tv_date"
                          android:orientation="vertical">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_judul"
                          style="@style/Text.SubTitleField.Bold.TwoRow"
                          android:text="Tips Mengadu kepada Wali"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_url"
                          style="@style/Text.SubTitleField.Regular.OneRow"
                          android:textColor="@color/grey_400"
                          android:text="https://google.com/"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>