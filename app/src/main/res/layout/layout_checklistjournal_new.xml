<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/lay_new"
              android:visibility="gone"
              android:background="@color/grey_100"
              android:gravity="center_horizontal"
              android:padding="@dimen/dimen_16dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_marginTop="@dimen/dimen_64dp"
            android:layout_width="@dimen/dimen_128dp"
            android:layout_height="@dimen/dimen_128dp"
            android:src="@drawable/ic_serving_dish"/>
    <TextView
            android:layout_marginTop="@dimen/dimen_18dp"
            style="@style/Text.SingleTitle.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum ada kegiatan tersedia"/>
    <TextView
            android:textAlignment="center"
            android:padding="@dimen/dimen_16dp"
            android:id="@+id/tv_description_new"
            android:layout_width="match_parent"
            style="@style/Text.SubTitleField.Regular"
            android:text="Yuk kita cek hal apa saja yang perlu kamu siapkan untuk kesuksesan karirmu di masa depan! Happy trying"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"/>
    <Button android:layout_width="match_parent"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_survey"
            android:background="@drawable/button_main"
            android:layout_marginBottom="@dimen/dimen_24dp"
            android:text="M E N G E N A L   I M P I A N M U"
            style="@style/MyButton"/>
</LinearLayout>