<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/dimen_16dp"
              android:paddingRight="@dimen/dimen_16dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="56dp">
    <ImageView android:layout_width="38dp" android:layout_height="38dp"
               android:src="@drawable/ic_hope"
               tools:ignore="MissingConstraints" android:id="@+id/imageView2"
    ></ImageView>
    <LinearLayout
            android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView android:id="@+id/tv_title"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  style="@style/Text.SubSingleTitle.Bold"
                  android:layout_marginLeft="@dimen/dimen_12dp"
                  android:text="H.O.P.E" app:layout_constraintStart_toEndOf="@+id/imageView2"
                  tools:ignore="MissingConstraints"/>
        <TextView android:id="@+id/tv_subtitle"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  style="@style/Text.Standard.OneRow"
                  android:text="High of Pie Company" app:layout_constraintStart_toEndOf="@+id/imageView2"
                  android:layout_marginStart="12dp"
                  app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    </LinearLayout>
</LinearLayout>